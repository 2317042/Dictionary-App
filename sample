pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/2317042/Dictionary-App.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'python -m pip install --upgrade pip'
                bat 'pip install flask requests'
            }
        }

        stage('Run App') {
            steps {
                bat 'start /B python p5.py'
            }
        }
    }

    post {
        always {
            echo "Dictionary App Pipeline Finished"
        }
    }
}
