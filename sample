pipeline {
    agent any

    environment {
        BACKEND_URL = "http://localhost:8000"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo '🔄 Cloning Git repository...'
                git branch: 'main', url: 'https://github.com/username/dictionary-app.git'
            }
        }

        stage('Start Backend') {
            steps {
                echo '🚀 Starting Backend...'
                bat "start /B python backend.py"
                sleep 5
            }
        }

        stage('Start Frontend') {
            steps {
                echo '🚀 Starting Frontend...'
                bat "start /B python frontend.py"
                sleep 5
            }
        }

        stage('Open Frontend') {
            steps {
                echo '🌐 Opening Dictionary App in browser...'
                bat "start http://localhost:5000"
            }
        }
    }

    post {
        success {
            echo "✅ Dictionary App deployed successfully!"
        }
        failure {
            echo "❌ Deployment failed. Check Jenkins logs."
        }
    }
}
